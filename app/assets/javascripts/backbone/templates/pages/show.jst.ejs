<h1><%= name %></h1>

<% if (typeof posts === 'undefined') { %>
  <p>No posts have been tracked yet!</p>
<% } else { %>
  <h4>Posts Tracked:</h4>
  <ul class="posts">
    <% for (i = posts.length-1; i >= 0; i--) { %>
      <li>&ldquo;<%= posts[i].object.message %>&rdquo; <time datetime="<%= posts[i].created_at %>"><%= jQuery.timeago(posts[i].created_at) %></time></li>
    <% } %>
  </ul>
<% } %>

<div class="controls">
  <a href="#/index" class="button">Back</a>
</div>